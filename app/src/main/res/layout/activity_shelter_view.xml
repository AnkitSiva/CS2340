<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xyz.ankitsiva.teamcaesium.controllers.ShelterViewActivity">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="499dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/ShelterListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shelter"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@color/Calm"
                android:clickable="true"
                android:onClick="Contacts"
                android:paddingBottom="@dimen/list_padding"
                android:text="@string/default_shelter"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/shelter1"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@color/Calm"
                android:clickable="true"
                android:onClick="Contacts"
                android:paddingBottom="@dimen/list_padding"
                android:text="@string/default_shelter"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/shelter2"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@color/Calm"
                android:clickable="true"
                android:onClick="Contacts"
                android:paddingBottom="@dimen/list_padding"
                android:text="@string/default_shelter"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/shelter3"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@color/Calm"
                android:clickable="true"
                android:onClick="Contacts"
                android:paddingBottom="@dimen/list_padding"
                android:text="@string/default_shelter"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/shelter4"
                android:layout_width="match_parent"
                android:layout_height="33dp"
